<div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
  <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Selecciona la dificultad</h2>
  <% @dificulty_levels.each do |level| %>
    <div>
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4">
        <%= link_to "Nivel #{level}", game_index_path(dificulty: level) %>
      </button>
    </div>
  <% end %>
</div>
